{
  "name": "devrsi0n-blog",
  "private": true,
  "description": "Devrsi0n's personal blog",
  "version": "1.0.0",
  "author": "devrsi0n <devrsi0n@gmail.com>",
  "homepage": "https://devrsi0n.me",
  "dependencies": {
    "cross-env": "^5.2.0",
    "gatsby": "^2.1.29",
    "gatsby-plugin-feed": "^2.0.14",
    "gatsby-plugin-google-analytics": "^2.0.16",
    "gatsby-plugin-manifest": "^2.0.22",
    "gatsby-plugin-offline": "^2.0.24",
    "gatsby-plugin-react-helmet": "^3.0.8",
    "gatsby-plugin-react-svg": "^2.1.0",
    "gatsby-plugin-sass": "^2.0.10",
    "gatsby-plugin-sharp": "^2.0.25",
    "gatsby-plugin-typography": "^2.2.8",
    "gatsby-plugin-webpack-bundle-analyzer": "^1.0.4",
    "gatsby-remark-autolink-headers": "^2.0.15",
    "gatsby-remark-copy-linked-files": "^2.0.9",
    "gatsby-remark-images": "^2.0.6",
    "gatsby-remark-prismjs": "^3.2.4",
    "gatsby-remark-responsive-iframe": "^2.0.9",
    "gatsby-remark-smartypants": "^2.0.8",
    "gatsby-source-filesystem": "^2.0.23",
    "gatsby-transformer-remark": "^2.3.1",
    "gatsby-transformer-sharp": "^2.1.15",
    "gitalk": "^1.5.0",
    "lodash": "^4.17.11",
    "md5": "^2.2.1",
    "node-sass": "^4.11.0",
    "prismjs": "^1.15.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-helmet": "^5.2.0",
    "react-typography": "^0.16.19",
    "typography": "^0.16.19",
    "typography-theme-pottery": "^0.0.7"
  },
  "keywords": [
    "gatsby",
    "netlify",
    "blog"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "start": "npm run dev",
    "clean": "rimraf .cache public",
    "build": "npm run clean && gatsby build",
    "dev": "gatsby develop",
    "serve": "gatsby serve",
    "analyze": "cross-env ANALYZE=true gatsby build",
    "lint": "npm run eslint && npm run prettier",
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslint": "eslint --fix src/",
    "prettier": "prettier --write ./**/*.{json,html,css,scss,md,yml}",
    "deploy": "gh-pages -r git@github.com:devrsi0n/devrsi0n.github.io.git -b master -d public",
    "now-build": "npm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@devrsi0n/eslint-config-react": "^0.2.3",
    "eslint": "^5.15.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run build && npm run deploy"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
