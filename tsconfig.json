{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components/index"],
      "@icons/*": ["icons/*"],
      "@icons": ["icons/index"],
      "@sections/*": ["sections/*"],
      "@sections": ["sections/index"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles/index"],
      "@templates/*": ["templates/*"],
      "@templates": ["templates/index"],
      "@types/*": ["types/*"],
      "@types": ["types/index"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils/index"]
    },
    "outDir": "./lib"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "lib",
    "public",
    ".cache",
    "gatsby/**"
  ]
}
