{
  "version": 2,
  "name": "devrsi0n.com",
  "alias": ["devrsi0n.com"],
  "env": {
    "GH_CLIENT_ID": "@gh_client_id",
    "GH_CLIENT_SECRET": "@gh_client_secret"
  },
  "build": {
    "env": {
      "GH_CLIENT_ID": "@gh_client_id",
      "GH_CLIENT_SECRET": "@gh_client_secret"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "^/public/static/(.*)",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "^/(.*).(css|js)",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "^/(.*).html",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" }
    }
  ]
}
